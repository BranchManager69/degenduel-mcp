{
  "name": "mcp-server",
  "version": "2.0.1",
  "description": "MCP Server with three Cursor Tools: Screenshot, Architect, and Code Review",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc -w & nodemon --watch build --exec \"node build/index.js\"",
    "pm2": "npm run build && pm2 start build/index.js --name mcp-server -f"
  },
  "bin": {
    "ai-tools": "./build/index.js",
    "mcp-tools": "./build/index.js",
    "mcp-server": "./build/index.js",
    "mcp": "./build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "openai": "^4.82.0",
    "puppeteer": "^24.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "nodemon": "^3.1.1",
    "typescript": "^5.7.3"
  }
}
